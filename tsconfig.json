{
	"include": [
		"js/**/*",
		"types/**/*"
	],
  "exclude": [
    "lib/marked.min.js",
    "lib/canvas2apng.js",
  ],
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
    "allowJs": true,

    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist-types"
  }
}
